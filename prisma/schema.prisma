model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  savings     Saving[]
  investments Investment[]
  expenses    Expense[]
  sessions    Session[]
}

model Saving {
  id        Int      @id @default(autoincrement())
  userId    Int
  amount    Float
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
}

model Investment {
  id        Int      @id @default(autoincrement())
  userId    Int
  amount    Float
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

model Expense {
  id        Int      @id @default(autoincrement())
  userId    Int
  amount    Float
  description String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
}
